{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div>
        <h1 class="text-center">Article index</h1>
        <div class="container">
            <div class="row justify-content-center">
            <div class="col-10 d-flex bg-secondary justify-content-center mb-5">
                {% include('layouts/_jumbotron.html.twig') %}
            </div>
            {% for article in articles %}
                <div class="col-10 mb-4">
                    <div class="card">
                        <img class="card-img-top" height="400"  width="500" src= "{{asset('uploads/images/'~ article.imageName)}}" alt="{{ article.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.description }}</p>
                            <p class="card-text"><small class="text-muted">{{article.createdAt|date("F jS \\a\\t g:ia")}}</small></p>
                            <a href="{{ path('article_show',{id: article.id}) }}" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
