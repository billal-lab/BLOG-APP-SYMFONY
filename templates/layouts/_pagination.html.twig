<nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">

            <li class="page-item {{(page <= 1 )? 'disabled' : ''}}">
                <a class="page-link" href="article/?page={{page-1}}">Previous</a>
            </li>

            {% for i in 1..((numberOfArticles/limit)|round)%}
                {% if i != 0 %}
                    <li class="page-item {{(page == i)? 'active' : ''}}">
                        <a class="page-link" href="/article/?page={{i}}">{{i}}</a>
                    </li>
                {% endif %}
            {% endfor %}

            <li class="page-item {{(page >= ((numberOfArticles/limit)|round) )? 'disabled' : ''}}">
                <a class="page-link" href="/article/?page={{page+1}}">Next</a>
            </li>
        </ul>
</nav>